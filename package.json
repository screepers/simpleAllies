{
    "name": "simple-allies",
    "version": "1.0.0",
    "description": "Allows for communication between allies using a public segment in Screeps",
    "homepage": "https://github.com/screepers/simpleAllies",
    "repository": "github:screepers/simpleAllies",
    "bugs": "https://github.com/screepers/simpleAllies/issues",
    "main": "./src/simplesAllies.ts",
    "scripts": {
        "compile": "tsc -p .",
        "build": "rollup -c rollup.config.mjs",
        "format": "prettier -w .",
        "format:check": "prettier -c .",
        "lint": "eslint src",
        "lint-fix": "eslint src --fix",
        "doc": "npx typedoc ./src/simpleAllies.ts ./src/types.ts",
        "doc:watch": "npm run doc -- --watch --preserveWatchOutput",
        "doc:push": "git subtree push --prefix docs origin gh-pages",
        "test": "npm-run-all lint format:check build"
    },
    "author": "screepers",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.5",
        "@total-typescript/ts-reset": "^0.5.1",
        "@types/node": "^20.8.0",
        "@types/screeps": "^3.3.7",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "eslint": "^8.51.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.0.3",
        "rollup": "2.79.1",
        "rollup-plugin-clear": "^2.0.7",
        "typedoc": "^0.25.4",
        "typescript": "^5.3"
    }
}
